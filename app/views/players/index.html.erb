

<div class="container">
  <h2>Players:</h2>
    <br>
    <% @player.each do |player| %>
      <div class="name">
        <h3><%= player.first_name  %> <%= player.last_name %></h3>
        <h6><%= player.position %></h6><button><%= link_to player_path(player), class: "btn btn-primary btn-sm" %></button>
      </div>
    <% end %>
</div>