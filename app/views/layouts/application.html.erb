<!DOCTYPE html>
<html>
  <head>
    <title>TeamApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header class="row">
    <div class="container top">
      <% if flash[:error].present? %>
        <div class="col-10 offset-1 alert alert-danger">
          <%= flash[:error].html_safe %>
        </div>
      <% end %>
      <%= link_to root_path do %>
      <h1 class="title">All Time Greatest Basketball Players!!!<h1>
      <hr class="line-break">
    </div>
    <% end %>
  </header>
  
  <!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= simple_form_for Player.new do |f| %>
      <div class="modal-body">
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :position %>
          <br> 
      
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= f.submit 'Add the Player', class: 'btn btn-success' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
    
    <br>
    
    <br>
    <br>

    
    <%= yield %>

    <div class="footer">
      <div class="container">
        <hr class="bottom">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
          <%= link_to 'Add your favorite player', new_player_path, data: {toggle: 'modal', target: '#exampleModal'} %>
        </button>
        
      </div>
    </div>
  </body>
</html>
